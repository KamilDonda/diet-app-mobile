<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DietApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="StartDescription" parent="">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:text">@string/desc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Title" parent="">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="backgroundTint">@color/primaryColorLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CircleButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">48dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
    </style>

    <style name="Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="SubHeader" parent="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="OutlinedRoundedBoxSmall" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded.Small
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded.Small" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="Row_A">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:gravity">top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="Row_B" parent="Row_A">
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="RowTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RowTextView2" parent="RowTextView">
        <item name="android:layout_weight">4</item>
    </style>

    <style name="FilterField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <!--        <item name="errorIconDrawable">@null</item>-->
        <!--        <item name="errorTextColor">@color/error</item>-->
        <!--        <item name="boxStrokeErrorColor">@color/error</item>-->
        <!--        <item name="errorEnabled">true</item>-->
        <item name="suffixText">g</item>
    </style>

    <style name="FilterInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/transparentBlack</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ErrorTextView" parent="RowTextView">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipMinHeight">34dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

</resources>